<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

        <ImageView
                android:id="@+id/event_icon"
                android:contentDescription="Event icon"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp" />

        <TextView
                android:id="@+id/event_name"
                android:layout_gravity="start"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="17sp"
                android:textColor="#030303"
                android:layout_alignTop="@+id/event_icon"
                android:layout_toRightOf="@+id/event_icon"
                android:layout_toEndOf="@+id/event_icon"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end" />

        <TextView
                android:id="@+id/event_desc"
                android:layout_gravity="start"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:text="Event Description"
                android:layout_alignBottom="@+id/event_icon"
                android:layout_alignLeft="@+id/event_name"
                android:layout_alignStart="@+id/event_name"
                android:maxLines="1"
                android:ellipsize="end" />
    </RelativeLayout>

    <ImageButton
            android:id="@+id/moreTrackOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:contentDescription="@string/more_options"
            android:background="@null"
            android:adjustViewBounds="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

</RelativeLayout>
